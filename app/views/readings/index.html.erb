Search By :<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
<tr>
  <td><%= link_to "All", readings_path %></td>
  <td><%= link_to 'Old consumer' ,readings_consumer_status_path(:consumer_status => true)%></td>
  <td><%= link_to 'New consumer' ,readings_consumer_status_path(:consumer_status => false)%></td>
</table>


<%= form_tag search_by_date_path, :method => 'get' do %>

<table>
  <tr>
    <td>Date From :</td>
    <td><input type="text_field" class="date_time" name="start_date" id="start_date"></td>
    <td> 
    <div class="input-append bootstrap-timepicker">
     <input id="timepicker1" type="text" class="input-small" name="timepicker1" style="height:26px;">
      <span class="add-on" style="height:16px;">
      <i class="icon-time"></i>
      </span>
    </div>
    </td>
  </tr>
  <tr>
    <td>Date To :</td> 
    <td><input type="text_field" class="date_time1" name="end_date" id="end_date"></td>
    <td> 
    <div class="input-append bootstrap-timepicker" >
     <input id="timepicker2" type="text" class="input-small" name="timepicker2" style="height:26px;">
      <span class="add-on" style="height:16px;">
      <i class="icon-time"></i>
      </span>
      </div>
    </td>
  </tr>
</table>
 <%= hidden_field_tag :reading_index , "reading_index"%>
 <script type="text/javascript">
 $('#timepicker1').timepicker({
minuteStep: 1,
template: 'modal',
appendWidgetTo: 'body',
showSeconds: true,
showMeridian: false,
defaultTime: false
});
$('#timepicker2').timepicker({
minuteStep: 1,
template: 'modal',
appendWidgetTo: 'body',
showSeconds: true,
showMeridian: false,
defaultTime: false
});
</script>

<%= submit_tag "Search by date and time" %>
<% end %>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
  
    <tr>
      <th>Consumer number</th>
      <th>Reader</th>
      <th>Team</th>
      <th>Meter reading</th>
      <th>Dtc</th>
      <th>Meter Status</th>
      <th>Meter Reader Status</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Date Time</th>
      <th>Image</th>
      <th>Action</th>
    </tr>
  

 
    <%  @readings.each do |reading| %>
      <tr>
        <td><%= reading.consumer_no rescue nil%>&nbsp;</td>
        <td><%= reading.read_by rescue nil%>&nbsp;</td>
        <td><% a =  TeamUser.find_by_user_id(reading.user_id).team_id %>
         <%= User.find(Team.find(a).user_id).username rescue nil %>
        </td>
        <td><%= reading.meter_reading  rescue nil%>&nbsp;</td>
        <td><%= reading.dtc rescue nil%>&nbsp;</td>
        <td><%= reading.meter_status rescue nil%>&nbsp;</td>
        <td><%= reading.meter_reader_status rescue nil%>&nbsp;</td>
        <td><%= reading.latitude rescue nil%>&nbsp;</td>
        <td><%= reading.longitude rescue nil%>&nbsp;</td>
        <td><%= reading.created_at.strftime("%T %a %b %e %Y ")%></td>
        <td><%= image_tag reading.image.url ,:width => 410,:height=> 400 %></td>
        <td> <%= link_to 'Show', reading %></td>

      </tr>
    <% end %>
  
</table>
<%= will_paginate @readings,renderer: BootstrapPagination::Rails %>

<%= link_to "Excel", readings_path(params.merge(format: "xls")) %>



<%= link_to "PDF", readings_path(params.merge(format: "pdf")) %>










<h1 align="center">Listing meter reader statuses</h1>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan = 3>Action</th>
      </tr>
  </thead>

  <tbody>
    <% @meter_reader_statuses.each do |meter_reader_status| %>
      <tr>
        <td><%= meter_reader_status.description %></td>
        <td><%= link_to 'Show', meter_reader_status %></td>
        <td><%= link_to 'Edit', edit_meter_reader_status_path(meter_reader_status) %></td>
        <td><%= link_to 'Destroy', meter_reader_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


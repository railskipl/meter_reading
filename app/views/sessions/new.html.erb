

    
        <div class="row">
         
            <div class="span4 offset4">
               <%= form_for(:session, :url => sessions_path, :html => {:class => "well"}) do |f| %>
               
                <div class="control-group">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span>
                       <%= f.text_field :username ,:placeholder=>"Username"%>
                    </div>
                </div>
                <div class="control-group">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-lock"></i></span>
                       <%= f.password_field :password,:placeholder=>"Password" %>
                    </div>
                </div>

                 <p><%= link_to "Forgot password?", new_password_reset_path %></p>
		
  			<%= check_box_tag :remember_me, 1, params[:remember_me] %>
  			<%= label_tag :remember_me %>
              
                 <%= f.submit "Log In" ,:class=> "btn btn-large btn-block btn-primary" ,:style => "padding-right:115px;text-indent:100px;"%>
                
             <% end %>
            </div>
    

